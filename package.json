{
  "name": "playwrightjs",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:list": "playwright test --list",
    "test:spec": "playwright test",
    "report": "playwright show-report",

    "smoke": "playwright test -g \"@smokeTest\"",
    "smoke:list": "playwright test -g \"@smokeTest\" --list",

    "smoke:chrome": "playwright test -g \"@smokeTest\" --project=chromium",
    "smoke:edge": "playwright test -g \"@smokeTest\" --project=edge",

    "smoke:chrome:headed": "playwright test -g \"@smokeTest\" --project=chromium --headed",
    "smoke:edge:headed": "playwright test -g \"@smokeTest\" --project=edge --headed",

    "smoke:chrome:debug": "PWDEBUG=1 playwright test -g \"@smokeTest\" --project=chromium --headed",
    "smoke:edge:debug": "PWDEBUG=1 playwright test -g \"@smokeTest\" --project=edge --headed"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.1",
    "@types/electron": "^1.4.38",
    "@types/node": "^24.0.14",
    "dotenv": "^17.2.0",
    "electron": "^37.2.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "playwright": {
    "globalSetup": "./utils/global-setup.ts"
  }
}
